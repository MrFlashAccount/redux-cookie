{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "strict": true,
    "esModuleInterop": true,
    "pretty": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist/",
    "tsBuildInfoFile": "./.cache/tsbuildinfo",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "incremental": true,
    "removeComments": false
  },
  "include": ["./index.ts"],
  "exclude": ["node_modules", "build", "dist", "public", "webpack", "jest", "tests", "examples"]
}
